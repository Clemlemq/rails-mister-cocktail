<div class="container">
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <h2><%= @cocktail.name %></h2>
  <h2><% @cocktail.doses.each do |d| %></h2>
  <%= d.description %>
  <%= d.ingredient.name %>

  <%= link_to dose_path(d),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i><% end %>
  <% end %>


    <%= link_to "Back to list", cocktails_path %>
</div>
